extends includes/layout.pug 

block content 
    h1 Edit product product.id
    form(action="/shop/products/edit/" + productId method="POST" enctype="multipart/form-data")
        div.form-group
            label(for="name") Name 
            input(type='text' id='name' name ='name' class="form-control" value=productName required)
        div.form-group
            label(for="description") Description 
            input(type='text' id='description' name='description' class="form-control" value=productDescription required)
        div.form-group
            label(for="image") Image 
            input(type='file' id='image' name='image' value=productImage class="form-control")
            input(type="hidden" name="_csrf" value=csrf)
        button(type='submit' class="btn btn-primary") Edit product
