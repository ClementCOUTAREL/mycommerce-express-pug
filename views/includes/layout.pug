html(lang='en')
    head
        title Commerce App 
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet", href="/css/custom.css")

    body
        header.bg-primary.d-flex.flex-row.justify-content-between.align-items-center
            div.d-flex.flex-row.justify-content-between.align-items-center 
                div.me-2.text-light Logo 
                nav(class="navbar")
                    a(href='/shop').link-light.text-decoration-none.me-2 Home
                    a(href='/shop/products').link-light.text-decoration-none.me-2 Products
                    if isAdmin
                        a(href='/shop/products/add').link-light.text-decoration-none.me-2 Add Product
            div 
                if isLoggedIn 
                    form(action='/shop/auth/logout' class="false-form" method='POST')
                        input(type="hidden" name="_csrf" value=csrf)
                        button(type="submit" class="false-form link-light text-decoration-none") Logout
                else
                    a(href="/shop/auth/login").link-light.text-decoration-none.me-2 Login
                    a(href="/shop/auth/register").link-light.text-decoration-none.me-2 Register
    
    main.main-wrapper
        div.container-fluid.px-4
            block content
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")

    footer.bg-primary.text-center.p-1
        h4.text-light.mb-0 Created by Clement COUTAREL